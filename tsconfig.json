{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@eventstore-helpers/*": ["projects/eventstore-helpers/src/*"]
    },
    "rootDir": "./src"
  },
  "references": [
    { "path": "projects/eventstore-helpers" },
    { "path": "projects/example-bank" }
  ],
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "dist"]
}
